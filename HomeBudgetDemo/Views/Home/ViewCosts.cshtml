
@{
    Layout = "_Layout";
}
@model List<ViewIncomeViewModel>
>
@using HomeBudgetDemo
@using HomeBudgetDemo.Models;
@using HomeBudgetDemo.Data
@using HomeBudgetDemo.ViewModels

<section style="margin-top:25px;" id="features" class="features">


    <div class="container">
        <div class="row">

            <div class="sec-title text-center mb50 wow bounceInDown animated" data-wow-duration="500ms">
                <h2 style="text-transform:capitalize;">список расходов</h2>
                <div class="devider"><i class="fa fa-heart-o fa-lg"></i></div>
            </div>

            <div class="container">
                <a asp-controller="home" asp-action="addcost" style="margin-bottom:10px;" class="btn btn-success mb-5">+Добавить новые расходы</a>
                <table style="margin:0 auto;" class="table table-dark table-striped">
                    <thead>
                        <tr class="table-bordered">
                            <th scope="col">Id</th>
                            <th scope="col">Приход/Расход</th>
                            <th scope="col">Категории</th>
                            <th scope="col">Сумма</th>
                            <th scope="col">Комментарии</th>
                            <th scope="col">Дата добавления</th>
                            <th scope="col">Дейсвие</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            double sum = 0;
                        }
                        @foreach (var cos in Model)
                        {
                            <tr class="success">
                                <td>@cos.Id</td>
                                <td>@cos.type</td>
                                <td>@cos.CategoryName</td>
                                <td>@cos.Sum</td>
                                @{
                                    sum += cos.Sum;
                                }
                                <td>@cos.Comment</td>
                                <td>@cos.Date</td>
                                <td scope="col"> <a asp-controller="home" asp-action="edit" asp-route-id="@cos.Id" class="btn btn-success"> Редактировать</a></td>
                                <td scope="col"> <a asp-controller="home" asp-action="deleteCos" asp-route-id="@cos.Id" onclick="return confirm('Are you sure delete this?');" class="btn btn-danger">Удалить</a></td>

                            </tr>
                        }

                        <tr>
                            <td colspan="2">Total: </td>

                            <td colspan="2">@sum</td>
                        </tr>
                    </tbody>
                </table>


            </div>
        </div>
    </div>

</section>